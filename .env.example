# =============================================================================
# OpenFive Environment Configuration
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git - it's in .gitignore
# =============================================================================

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Security ---
# AES-256-GCM encryption key for provider API keys
# Generate with: openssl rand -hex 32
MASTER_ENCRYPTION_KEY=your-64-char-hex-key-generate-with-openssl-rand-hex-32

# --- Gateway ---
GATEWAY_PORT=8787
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# --- Stripe (optional - for billing) ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# --- Sentry (optional - for error tracking) ---
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# --- OAuth (optional - configure in Supabase dashboard) ---
# GitHub and Google OAuth are configured in the Supabase dashboard,
# not in environment variables. See:
# https://supabase.com/docs/guides/auth/social-login

# --- Logging ---
LOG_LEVEL=info
LOG_JSON=true
